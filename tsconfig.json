{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "declarationMap": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test"]
}
